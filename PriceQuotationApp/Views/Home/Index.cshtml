@model PriceQuotationApp.Models.PriceQuote

@{
    ViewData["Title"] = "Price Quote App";
}

<h1>PriceQuote</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row mt-3">
                <label asp-for="Subtotal" class="col-sm-5 col-form-label"></label>
                <div class="col-sm-5">
					<input asp-for="Subtotal" class="form-control" />
                </div>
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="Discount" class="col-sm-5 col-form-label"></label>
				<div class="col-sm-5">
                    <input asp-for="Discount" class="form-control"/>
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="DiscountAmount" class="col-sm-5 col-form-label"></label>
				<div class="col-sm-5">
                    <input asp-for="DiscountAmount" disabled aria-label="Amount (to the nearest dollar)" class="form-control" value="@Model.DiscountAmount.ToString("C")" />
                </div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="Total" class="col-sm-5 col-form-label"></label>
				<div class="col-sm-5">
                    <input asp-for="Total" disabled aria-label="Amount (to the nearest dollar)" class="form-control" value="@Model.Total.ToString("C")" />
                </div>
            </div>
            <div class="form-group mt-4">
                <input type="submit" name="actionButton" value="Calculate" class="btn btn-primary" />
                <a asp-action="Index">Clear</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
